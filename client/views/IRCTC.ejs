    <!-- Select2 JS -->
    <script src="/public/plugins/select2/js/select2.min.js"></script>

    <!-- Datepicker Core JS -->
    <script src="/public/plugins/moment/moment.min.js"></script>
    <script src="/public/js/main/bootstrap-datetimepicker.min.js"></script>

    <!-- Custom JS -->
    <script src="/public/js/main/script.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.2.5/firebase.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/public/js/custom/firebase.js"></script>
    <script>
        var db = firebase.firestore()
        var storageRef = firebase.storage().ref();
        var uemail = localStorage.getItem("uemail")
        document.getElementById("submitbtn").addEventListener("click", async () => {

            var name = document.getElementById("name").value
            var number = document.getElementById("number").value
            var email = document.getElementById("email").value
            var aadhar = document.getElementById("aadhar").files[0]
            var pan = document.getElementById("pan").files[0]
            var eb = document.getElementById("eb").files[0]
            var MSME = document.getElementById("MSME").files[0]
            var visiting = document.getElementById("visiting").files[0]
            var license = document.getElementById("license").files[0]
            var photo = document.getElementById("photo").files[0]
            var others = document.getElementById("others").files[0]

            var emailreg = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/
            if (name == "") {
                document.getElementById("fbname").style.display = "block"
                return false
            } else if (number == "") {
                document.getElementById("fbnumber").style.display = "block"
                return false
            } else if (!emailreg.test(email)) {
                document.getElementById("fbemail").style.display = "block"
                return false
            } else if (aadhar == undefined) {
                document.getElementById("fbaadhar").style.display = "block"
                return false
            } else if (pan == undefined) {
                document.getElementById("fbpan").style.display = "block"
                return false
            } else if (eb == undefined) {
                document.getElementById("fbeb").style.display = "block"
                return false
            } else if (MSME == undefined) {
                document.getElementById("fbMSME").style.display = "block"
                return false
            } else if (visiting == undefined) {
                document.getElementById("fbvisiting").style.display = "block"
                return false
            } else if (license == undefined) {
                document.getElementById("fblicense").style.display = "block"
                return false
            } else if (photo == undefined) {
                document.getElementById("fbphoto").style.display = "block"
                return false
            } else {
                toastr["info"]("Please Wait", "File Uploading..");
                document.getElementById("submitbtn").innerHTML = " <span class='spinner-border spinner-border-sm mr-2' role='status'style='padding: 7px;' aria-hidden='true'></span>Please Wait..."

                var walletamount = new Promise((resolve, reject) => {
                    var wallet = db.collection("users").doc(uemail).collection("wallet").doc(
                        uemail)
                    wallet.get().then((
                        doc) => {
                        if (doc.data() != undefined) {
                            var useramount = doc.data().amount
                            if (useramount < 2999) {
                                console.log("please add money")
                                setTimeout(() => {
                                    resolve(0)
                                })
                            } else {
                               resolve(1)

                            }
                        } else {
                            console.log("please add money")
                            setTimeout(() => {
                                resolve(0)
                            })
                        }
                    })
                })
                var walletprice = await walletamount
                var aadharurl, panurl, eburl, MSMEurl, visitingurl, licenseurl, photourl
                var userid = email
                if (walletprice == 1) {
                    var photoref = storageRef.child(userid + "/" + name + '/IRCTC/photo/' + photo
                        .name);
                    await photoref.put(photo).then(function (snapshot) {
                        //getting url  				
                        photoref.getDownloadURL().then(function (url) {
                            photourl = url;
                            console.log(photourl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });
                    var aadharref = storageRef.child(userid + "/" + name + '/IRCTC/aadhar/' + aadhar
                        .name);
                    await aadharref.put(aadhar).then(function (snapshot) {
                        //getting url  				
                        aadharref.getDownloadURL().then(function (url) {
                            aadharurl = url;
                            console.log(aadharurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var panref = storageRef.child(userid + "/" + name + '/IRCTC/pan/' + pan
                        .name);
                    await panref.put(pan).then(function (snapshot) {
                        //getting url  				
                        panref.getDownloadURL().then(function (url) {
                            panurl = url;
                            console.log(panurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var ebref = storageRef.child(userid + "/" + name + '/IRCTC/eb/' + eb
                        .name);
                    await ebref.put(eb).then(function (snapshot) {
                        //getting url  				
                        ebref.getDownloadURL().then(function (url) {
                            eburl = url;
                            console.log(eburl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var MSMEref = storageRef.child(userid + "/" + name + '/IRCTC/MSME/' + MSME
                        .name);
                    await MSMEref.put(MSME).then(function (snapshot) {
                        //getting url  				
                        MSMEref.getDownloadURL().then(function (url) {
                            MSMEurl = url;
                            console.log(MSMEurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var visitingref = storageRef.child(userid + "/" + name + '/IRCTC/visiting/' + visiting
                        .name);
                    await visitingref.put(visiting).then(function (snapshot) {
                        //getting url  				
                        visitingref.getDownloadURL().then(function (url) {
                            visitingurl = url;
                            console.log(visitingurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var licenseref = storageRef.child(userid + "/" + name + '/IRCTC/license/' + license
                        .name);
                    await licenseref.put(license).then(function (snapshot) {
                        //getting url  				
                        licenseref.getDownloadURL().then(function (url) {
                            licenseurl = url;
                            console.log(licenseurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    if (others != undefined) {
                        var otherref = storageRef.child(userid + "/" + name + '/IRCTC/other/' + others
                            .name);
                        await otherref.put(others).then(function (snapshot) {
                            //getting url  				
                            otherref.getDownloadURL().then(function (url) {
                                othersurl = url;
                                console.log(othersurl);
                            })
                                .catch(function (error) {
                                    console.log("error encountered");
                                });
                        });
                    } else {
                        othersurl = "none"
                    }
                    setTimeout(() => {
                        $.ajax({
                            method: "POST",
                            url: "/certificate/IRCTC",
                            data: {
                                name: name,
                                number: number,
                                email: email,
                                Certificate: "IRCTC",
                                Certificatename: "IRCTC",
                                aadhar: aadharurl,
                                pan: panurl,
                                eb: eburl,
                                MSME: MSMEurl,
                                visiting: visitingurl,
                                license: licenseurl,
                                photo: photourl,
                                others: othersurl,
                                uemail: uemail
                            },
                            success: (res) => {
                                if (res.status != undefined) {                                    
                                    var wallet = db.collection("users").doc(uemail).collection("wallet").doc(uemail)
                                    var myamount = wallet.get().then((doc) => {
                                        var useramount = doc.data().amount
                                        wallet.update({
                                            amount: Number(useramount) - Number(2999)
                                        }).then(() => {       
                                            const monthNames = ["January", "February", "March", "April", "May", "June",
                                                "July", "August", "September", "October", "November", "December"
                                            ];
                                            var date = new Date()
                                            var cdate = monthNames[date.getMonth()] + " " + date.getDate() + " " + date.getFullYear() + " " + date.getHours() + ":" + date.getMinutes()                                     
                                            db.collection("users").doc(uemail).collection("wallethistory").doc().set({
                                                amount: 2999,
                                                Certificatename: "IRCTC",
                                                date:cdate
                                            }).then(() => {
                                                db.collection("users").doc(uemail).get().then((docss) => {
                                                    db.collection("wallethistory").doc().set({
                                                        amount: 2999,
                                                        Certificatename: "IRCTC",
                                                        date: cdate,
                                                        name: docss.data().uname
                                                    })
                                                })
                                                toastr["success"]("Success", "Certificate Upload Successfully..");//successfully
                                                setTimeout(() => { window.location.reload() }, 2000)
                                            })
                                        })
                                    })
                                }
                            }
                        })
                    }, 3000)


                } else {
                    toastr["error"]("Low Balance", "Please Add Money..");
                }
            }
        })
    </script>
