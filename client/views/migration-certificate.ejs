    <script src="https://www.gstatic.com/firebasejs/8.2.5/firebase.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="/public/js/custom/firebase.js"></script>
    <script>
        var db = firebase.firestore()
        var storageRef = firebase.storage().ref();
        var uemail = localStorage.getItem("uemail")
        document.getElementById("submitbtn").addEventListener("click", async () => {

            var name = document.getElementById("name").value
            var number = document.getElementById("number").value
            var email = document.getElementById("email").value
            var degree = document.getElementById("degree").files[0]
            var mark = document.getElementById("mark").files[0]
            var photo = document.getElementById("photo").files[0]
            var sign = document.getElementById("sign").files[0]
            var CRRI = document.getElementById("CRRI").files[0]
            var others = document.getElementById("others").files[0]
            var emailreg = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/
            if (name == "") {
                document.getElementById("fbname").style.display = "block"
                return false
            } else if (number == "") {
                document.getElementById("fbnumber").style.display = "block"
                return false
            } else if (!emailreg.test(email)) {
                document.getElementById("fbemail").style.display = "block"
                return false
            } else if (degree == undefined) {
                document.getElementById("fbdegree").style.display = "block"
                return false
            } else if (mark == undefined) {
                document.getElementById("fbmark").style.display = "block"
                return false
            } else if (sign == undefined) {
                document.getElementById("fbsign").style.display = "block"
                return false
            } else if (CRRI == undefined) {
                document.getElementById("fbCRRI").style.display = "block"
                return false
            } else if (photo == undefined) {
                document.getElementById("fbphoto").style.display = "block"
                return false
            } else {
                toastr["info"]("Please Wait", "File Uploading..");
                document.getElementById("submitbtn").innerHTML = " <span class='spinner-border spinner-border-sm mr-2' role='status'style='padding: 7px;' aria-hidden='true'></span>please wait..."

                var walletamount = new Promise((resolve, reject) => {
                    var wallet = db.collection("users").doc(uemail).collection("wallet").doc(
                        uemail)
                    wallet.get().then((
                        doc) => {
                        if (doc.data() != undefined) {
                            var useramount = doc.data().amount
                            if (useramount < 60) {
                                console.log("please add money")
                                setTimeout(() => {
                                    resolve(0)
                                })
                            } else {
                               resolve(1)
                            }
                        } else {
                            console.log("please add money")
                            setTimeout(() => {
                                resolve(0)
                            })
                        }
                    })
                })
                var walletprice = await walletamount
                var degreeurl, signurl, markurl, photourl,CRRIurl,othersurl
                var userid = email
                if (walletprice == 1) {
                    var photoref = storageRef.child(userid + "/" + name + '/Widow-pension/photo/' + photo
                        .name);
                    await photoref.put(photo).then(function (snapshot) {
                        //getting url  				
                        photoref.getDownloadURL().then(function (url) {
                            photourl = url;
                            console.log(photourl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });
                    var degreeref = storageRef.child(userid + "/" + name + '/Widow-pension/degree/' + degree
                        .name);
                    await degreeref.put(degree).then(function (snapshot) {
                        //getting url  				
                        degreeref.getDownloadURL().then(function (url) {
                            degreeurl = url;
                            console.log(degreeurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var markref = storageRef.child(userid + "/" + name + '/Widow-pension/mark/' + mark
                        .name);
                    await markref.put(mark).then(function (snapshot) {
                        //getting url  				
                        markref.getDownloadURL().then(function (url) {
                            markurl = url;
                            console.log(markurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var signref = storageRef.child(userid + "/" + name + '/Widow-pension/sign/' + sign
                        .name);
                    await signref.put(sign).then(function (snapshot) {
                        //getting url  				
                        signref.getDownloadURL().then(function (url) {
                            signurl = url;
                            console.log(signurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var CRRIref = storageRef.child(userid + "/" + name + '/Widow-pension/CRRI/' + CRRI
                        .name);
                    await CRRIref.put(CRRI).then(function (snapshot) {
                        //getting url  				
                        CRRIref.getDownloadURL().then(function (url) {
                            CRRIurl = url;
                            console.log(CRRIurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });
                    if (others != undefined) {
                        var otherref = storageRef.child(userid + "/" + name + '/Widow-pension/other/' + others
                            .name);
                        await otherref.put(others).then(function (snapshot) {
                            //getting url  				
                            otherref.getDownloadURL().then(function (url) {
                                othersurl = url;
                                console.log(othersurl);
                            })
                                .catch(function (error) {
                                    console.log("error encountered");
                                });
                        });
                    } else {
                        othersurl = "none"
                    }
                    setTimeout(() => {
                        $.ajax({
                            method: "POST",
                            url: "/certificate/CRRI",
                            data: {
                                name: name,
                                number: number,
                                email: email,
                                Certificate: "CRRI",
                                Certificatename: "CRRI",
                                degree: degreeurl,
                                mark: markurl,
                                sign: signurl,
                                CRRI: CRRIurl,
                                photo: photourl,
                                others: othersurl,
                                uemail: uemail
                            },
                            success: (res) => {
                                if (res.status != undefined) {                                    
                                    var wallet = db.collection("users").doc(uemail).collection("wallet").doc(uemail)
                                    var myamount = wallet.get().then((doc) => {
                                        var useramount = doc.data().amount
                                        wallet.update({
                                            amount: Number(useramount) - Number(60)
                                        }).then(() => {     
                                            const monthNames = ["January", "February", "March", "April", "May", "June",
                                                "July", "August", "September", "October", "November", "December"
                                            ];
                                            var date = new Date()
                                            var cdate = monthNames[date.getMonth()] + " " + date.getDate() + " " + date.getFullYear() + " " + date.getHours() + ":" + date.getMinutes()                                       
                                            db.collection("users").doc(uemail).collection("wallethistory").doc().set({
                                                amount: 60,
                                                Certificatename: "Migration",
                                                date:cdate
                                            }).then(() => {
                                                db.collection("users").doc(uemail).get().then((docss) => {
                                                    db.collection("wallethistory").doc().set({
                                                        amount: 60,
                                                        Certificatename: "Migration Certificate",
                                                        date: cdate,
                                                        name: docss.data().uname
                                                    })
                                                })
                                                toastr["success"]("Success", "Certificate Upload Successfully..");//successfully
                                                setTimeout(() => { window.location.reload() }, 2000)
                                            })
                                        })
                                    })
                                }
                            }
                        })
                    }, 3000)


                } else {
                    toastr["error"]("Low Balance", "Please Add Money..");
                }
            }
        })
    </script>
