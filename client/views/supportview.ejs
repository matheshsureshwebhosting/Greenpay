<script>
    var db = firebase.firestore();
    var uemail = localStorage.getItem("uemail")
    var fullurl = url.split("_")
    var issue = fullurl[0] + " " + fullurl[1]
    var issueid = fullurl[2]

    function submitticket() {
        var text = document.getElementById("text").value
        if (text != "") {

            const monthNames = ["January", "February", "March", "April", "May", "June",
                "July", "August", "September", "October", "November", "December"
            ];
            var date = new Date()
            var cdate = monthNames[date.getMonth()] + " " + date.getDate() + " " + date.getFullYear() + " " + date.getHours() + ":" + date.getMinutes() + ":" + date.getSeconds()
            db.collection("users").doc(uemail).get().then(function (doc) {


                db.collection("tickets").doc("client").collection(issue).doc(issueid).collection("chat").doc().set({
                    text: text,
                    date: cdate,
                    source: "client",
                    name: doc.data().uname
                }).then(function (doc) {
                    console.log("successfull")
                    window.location.reload()
                })
            })
        }
    }


