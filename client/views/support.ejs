<script>

	var db = firebase.firestore();
	var uemail = localStorage.getItem("uemail")
	function submitticket() {


		var subject = document.getElementById("subject").value
		var message = document.getElementById("message").value
		var date = document.getElementById("date").value
		var name = document.getElementById("name").value
		if (subject == "none") {
			document.getElementById("fbsubject").style.display = "block"
			return false
		} else if (message == "") {
			document.getElementById("fbmessage").style.display = "block"
			return false
		} else if (date.length == 0) {
			document.getElementById("fbdate").style.display = "block"
			return false
		} else if (name == "") {
			document.getElementById("fbname").style.display = "block"
			return false
		} else {
			
			var result = '';
			var characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
			var charactersLength = characters.length;
			for (var i = 0; i < 10; i++) {
				result += characters.charAt(Math.floor(Math.random() * charactersLength));
			}
			var docid = result
			document.getElementById("ticksub").innerHTML = " <span class='spinner-border spinner-border-sm mr-2' role='status'style='padding: 7px;' aria-hidden='true'></span>Please Wait..."
			db.collection("users").doc(uemail).get().then((doc) => {						
				db.collection("tickets").doc("client").collection(subject).doc(docid).set({
					subject: subject,
					message: message,
					date: date,
					name: name,
					email: doc.data().uemail,
					phone: doc.data().uphone,
					docid:docid
				}).then(() => {
					console.log("new doc")
					toastr["success"]("Success", "Ticket Update Sucessfullt..");
					var realtime = firebase.database();
					realtime.ref().push().set({
						subject: subject,
						message: message,
						date: date,
						name: name,
						email: doc.data().uemail,
						phone: doc.data().uphone,
						docid:docid
					}).then(() => {
						setTimeout(() => { window.location.reload() }, 2000)
					})
				})
			})
		}
	}
	window.onload = () => {
		var uemail = localStorage.getItem("uemail")
		if (uemail == null) {
			toastr["error"]("Please Login");
			setTimeout(() => { window.location.replace("/login") }, 1000)

		}
	}
</script>

