    <script>
        var db = firebase.firestore()
        var storageRef = firebase.storage().ref();
        var uemail = localStorage.getItem("uemail")
        document.getElementById("submitbtn").addEventListener("click", async () => {

            var name = document.getElementById("name").value
            var number = document.getElementById("number").value
            var email = document.getElementById("email").value
            var chitta = document.getElementById("chitta").files[0]
            var adangal = document.getElementById("adangal").files[0]
            var self = document.getElementById("self").files[0]
            var encumbrance = document.getElementById("encumbrance").files[0]
            var sign = document.getElementById("sign").files[0]
            var sale = document.getElementById("sale").files[0]
            var address = document.getElementById("address").files[0]
            var others = document.getElementById("others").files[0]
            var emailreg = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/
            if (name == "") {
                document.getElementById("fbname").style.display = "block"
                return false
            } else if (number == "") {
                document.getElementById("fbnumber").style.display = "block"
                return false
            } else if (!emailreg.test(email)) {
                document.getElementById("fbemail").style.display = "block"
                return false
            } else if (chitta == undefined) {
                document.getElementById("fbchitta").style.display = "block"
                return false
            } else if (adangal == undefined) {
                document.getElementById("fbadangal").style.display = "block"
                return false
            } else if (self == undefined) {
                document.getElementById("fbself").style.display = "block"
                return false
            } else if (encumbrance == undefined) {
                document.getElementById("fbencumbrance").style.display = "block"
                return false
            } else if (sign == undefined) {
                document.getElementById("fbsign").style.display = "block"
                return false
            } else if (sale == undefined) {
                document.getElementById("fbsale").style.display = "block"
                return false
            } else if (address == undefined) {
                document.getElementById("fbaddress").style.display = "block"
                return false
            } else {
                toastr["info"]("Please Wait", "File Uploading..");
                document.getElementById("submitbtn").innerHTML = " <span class='spinner-border spinner-border-sm mr-2' role='status'style='padding: 7px;' aria-hidden='true'></span>please wait..."

                var walletamount = new Promise((resolve, reject) => {
                    var wallet = db.collection("users").doc(uemail).collection("wallet").doc(
                        uemail)
                    wallet.get().then((
                        doc) => {
                        if (doc.data() != undefined) {
                            var useramount = doc.data().amount
                            if (useramount < 60) {
                                console.log("please add money")
                                setTimeout(() => {
                                    resolve(0)
                                })
                            } else {
                               resolve(1)

                            }
                        } else {
                            console.log("please add money")
                            setTimeout(() => {
                                resolve(0)
                            })
                        }
                    })
                })
                var walletprice = await walletamount
                var saleurl, addressurl, signurl, selfurl, encumbranceurl, adangalurl, chittaurl, othersurl
                var userid = email
                if (walletprice == 1) {
                    var chittaref = storageRef.child(userid + "/" + name + '/Farmer-certificate/chitta/' + chitta
                        .name);
                    await chittaref.put(chitta).then(function (snapshot) {
                        //getting url  				
                        chittaref.getDownloadURL().then(function (url) {
                            chittaurl = url;
                            console.log(chittaurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });
                    var adangalref = storageRef.child(userid + "/" + name + '/Farmer-certificate/adangal/' + adangal
                        .name);
                    await adangalref.put(adangal).then(function (snapshot) {
                        //getting url  				
                        adangalref.getDownloadURL().then(function (url) {
                            adangalurl = url;
                            console.log(adangalurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var encumbranceref = storageRef.child(userid + "/" + name + '/Farmer-certificate/encumbrance/' + encumbrance
                        .name);
                    await encumbranceref.put(encumbrance).then(function (snapshot) {
                        //getting url  				
                        encumbranceref.getDownloadURL().then(function (url) {
                            encumbranceurl = url;
                            console.log(encumbranceurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var selfref = storageRef.child(userid + "/" + name + '/Farmer-certificate/eb/' + self
                        .name);
                    awaitselfref.put(self).then(function (snapshot) {
                        //getting url  				
                        selfref.getDownloadURL().then(function (url) {
                            selfurl = url;
                            console.log(selfurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var signref = storageRef.child(userid + "/" + name + '/Farmer-certificate/sign/' + sign
                        .name);
                    await signref.put(sign).then(function (snapshot) {
                        //getting url  				
                        signref.getDownloadURL().then(function (url) {
                            signurl = url;
                            console.log(signurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var addressref = storageRef.child(userid + "/" + name + '/Farmer-certificate/address/' + address
                        .name);
                    await addressref.put(address).then(function (snapshot) {
                        //getting url  				
                        addressref.getDownloadURL().then(function (url) {
                            addressurl = url;
                            console.log(addressurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    var saleref = storageRef.child(userid + "/" + name + '/Farmer-certificate/sale/' + sale
                        .name);
                    await saleref.put(sale).then(function (snapshot) {
                        //getting url  				
                        saleref.getDownloadURL().then(function (url) {
                            saleurl = url;
                            console.log(saleurl);
                        })
                            .catch(function (error) {
                                console.log("error encountered");
                            });
                    });

                    if (others != undefined) {
                        var otherref = storageRef.child(userid + "/" + name + '/Farmer-certificate/other/' + others
                            .name);
                        await otherref.put(others).then(function (snapshot) {
                            //getting url  				
                            otherref.getDownloadURL().then(function (url) {
                                othersurl = url;
                                console.log(othersurl);
                            })
                                .catch(function (error) {
                                    console.log("error encountered");
                                });
                        });
                    } else {
                        othersurl = "none"
                    }
                    setTimeout(() => {
                        $.ajax({
                            method: "POST",
                            url: "/certificate/Farmer-certificate",
                            data: {
                                name: name,
                                number: number,
                                email: email,
                                Certificate: "FarmerCertificate",
                                Certificatename: "FarmerCertificate",
                                adangal: adangalurl,
                                sign: signurl,
                                self: selfurl,
                                sale: saleurl,
                                address: addressurl,
                                encumbrance: encumbranceurl,
                                chitta: chittaurl,
                                others: othersurl,
                                uemail: uemail
                            },
                            success: (res) => {
                                if (res.status != undefined) {                                    
                                    var wallet = db.collection("users").doc(uemail).collection("wallet").doc(uemail)
                                    var myamount = wallet.get().then((doc) => {
                                        var useramount = doc.data().amount
                                        wallet.update({
                                            amount: Number(useramount) - Number(60)
                                        }).then(() => {  
                                            const monthNames = ["January", "February", "March", "April", "May", "June",
                                                "July", "August", "September", "October", "November", "December"
                                            ];
                                            var date = new Date()
                                            var cdate = monthNames[date.getMonth()] + " " + date.getDate() + " " + date.getFullYear() + " " + date.getHours() + ":" + date.getMinutes()                                          
                                            db.collection("users").doc(uemail).collection("wallethistory").doc().set({
                                                amount: 60,
                                                Certificatename: "Farmer Certificate",
                                                date:cdate
                                            }).then(() => {
                                                db.collection("users").doc(uemail).get().then((docss) => {
                                                    db.collection("wallethistory").doc().set({
                                                        amount: 60,
                                                        Certificatename: "Farmer Certificate",
                                                        date: cdate,
                                                        name: docss.data().uname
                                                    })
                                                })
                                                toastr["success"]("Success", "Certificate Upload Successfully..");//successfully
                                                setTimeout(() => { window.location.reload() }, 2000)
                                            })
                                        })
                                    })
                                }
                            }
                        })
                    }, 3000)


                } else {
                    toastr["error"]("Low Balance", "Please Add Money..");
                }
            }
        })
    </script>
