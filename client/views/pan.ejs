                    </div>
                </div>
                <!-- /Page Header -->

                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">Upload Documents</h5>
								<div style="float: left;margin-top: 10px;">
								<a href="/public/49A_Form_Updated.pdf" target="_blank" download="49A Form">49A Form</a><br>
								<a href="/public/CSF_Form_Updated.pdf" target="_blank" download="Correction Form">Correction Form</a>
								</div>
                                <div style="float: right;">
									<h5 class="card-title">Contact : 9176368359</h5><br>
									<h5 class="card-title">Price : Rs 107</h5>
								</div>
