	<script src="https://www.gstatic.com/firebasejs/8.2.5/firebase.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="/public/js/custom/firebase.js"></script>
	<script>
		var db = firebase.firestore()
		var storageRef = firebase.storage().ref();
		var uemail = localStorage.getItem("uemail")
		document.getElementById("submitbtn").addEventListener("click", async () => {

			var name = document.getElementById("name").value
			var number = document.getElementById("number").value
			var email = document.getElementById("email").value
			var photo = document.getElementById("photo").files[0]
			var permanent = document.getElementById("permanent").files[0]
			var permanentbride = document.getElementById("permanentbride").files[0]
			var marriage = document.getElementById("marriage").files[0]
			var self = document.getElementById("self").files[0]
			var address = document.getElementById("address").files[0]
			var others = document.getElementById("others").files[0]
			var emailreg = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/
			if (name == "") {
				document.getElementById("fbname").style.display = "block"
				return false
			} else if (number == "") {
				document.getElementById("fbnumber").style.display = "block"
				return false
			} else if (!emailreg.test(email)) {
				document.getElementById("fbemail").style.display = "block"
				return false
			} else if (photo == undefined) {
				document.getElementById("fbphoto").style.display = "block"
				return false
			} else if (permanent == undefined) {
				document.getElementById("fbpermanent").style.display = "block"
				return false
			} else if (permanentbride == undefined) {
				document.getElementById("fbpermanentbride").style.display = "block"
				return false
			} else if (marriage == undefined) {
				document.getElementById("fbmarriage").style.display = "block"
				return false
			} else if (self == undefined) {
				document.getElementById("fbself").style.display = "block"
				return false
			} else if (address == undefined) {
				document.getElementById("fbaddress").style.display = "block"
				return false
			} else {
				toastr["info"]("Please Wait", "File Uploading..");
				document.getElementById("submitbtn").innerHTML = " <span class='spinner-border spinner-border-sm mr-2' role='status'style='padding: 7px;' aria-hidden='true'></span>Please Wait..."

				var walletamount = new Promise((resolve, reject) => {
					var wallet = db.collection("users").doc(uemail).collection("wallet").doc(
						uemail)
					wallet.get().then((
						doc) => {
						if (doc.data() != undefined) {
							var useramount = doc.data().amount
							if (useramount < 60) {
								console.log("please add money")
								setTimeout(() => {
									resolve(0)
								})
							} else {
								resolve(1)

							}
						} else {
							console.log("please add money")
							setTimeout(() => {
								resolve(0)
							})
						}
					})
				})
				var walletprice = await walletamount
				var userid = email
				var photourl, permanenturl, permanentbrideurl, marriageurl, selfturl, addressurl, othersurl
				if (walletprice == 1) {
					var photoref = storageRef.child(userid + "/" + name + '/Intercastecertificate/photo/' + photo
						.name);
					await photoref.put(photo).then(function (snapshot) {
						//getting url  				
						photoref.getDownloadURL().then(function (url) {
							photourl = url;
							console.log(photourl);
						})
							.catch(function (error) {
								console.log("error encountered");
							});
					});
					var permanentref = storageRef.child(userid + "/" + name + '/Intercastecertificate/permanent/' + permanent
						.name);
					await permanentref.put(permanent).then(function (snapshot) {
						//getting url  				
						permanentref.getDownloadURL().then(function (url) {
							permanenturl = url;
							console.log(permanenturl);
						})
							.catch(function (error) {
								console.log("error encountered");
							});
					});
					var permanentbrideref = storageRef.child(userid + "/" + name + '/Intercastecertificate/permanentbride/' +
						permanentbride.name);
					await permanentbrideref.put(permanentbride).then(function (snapshot) {
						//getting url  				
						permanentbrideref.getDownloadURL().then(function (url) {
							permanentbrideurl = url;
							console.log(permanentbrideurl);
						})
							.catch(function (error) {
								console.log("error encountered");
							});
					});
					var marriageref = storageRef.child(userid + "/" + name + '/Intercastecertificate/marriage/' + marriage
						.name);
					await marriageref.put(marriage).then(function (snapshot) {
						//getting url  				
						marriageref.getDownloadURL().then(function (url) {
							marriageurl = url;
							console.log(marriageurl);
						})
							.catch(function (error) {
								console.log("error encountered");
							});
					});
					var selfref = storageRef.child(userid + "/" + name + '/Intercastecertificate/self/' + self
						.name);
					await selfref.put(self).then(function (snapshot) {
						//getting url  				
						selfref.getDownloadURL().then(function (url) {
							selfurl = url;
							console.log(selfurl);
						})
							.catch(function (error) {
								console.log("error encountered");
							});
					});
					var addressref = storageRef.child(userid + "/" + name + '/Intercastecertificate/address/' + address
						.name);
					await addressref.put(address).then(function (snapshot) {
						//getting url  				
						addressref.getDownloadURL().then(function (url) {
							addressurl = url;
							console.log(addressurl);
						})
							.catch(function (error) {
								console.log("error encountered");
							});
					});
					if (others != undefined) {
						var otherref = storageRef.child(userid + "/" + name + '/Intercastecertificate/other/' + others
							.name);
						await otherref.put(others).then(function (snapshot) {
							//getting url  				
							otherref.getDownloadURL().then(function (url) {
								othersurl = url;
								console.log(othersurl);
							})
								.catch(function (error) {
									console.log("error encountered");
								});
						});
					} else {
						othersurl = "none"
					}
					setTimeout(() => {
						$.ajax({
							method: "POST",
							url: "/certificate/Intercastecertificate",
							data: {
								name: name,
								number: number,
								email: email,
								Certificate: "Intercastecertificate",
								Certificatename: "Inter Caste Certificate",
								photo: photourl,
								permanent: permanenturl,
								permanentbride: permanentbrideurl,
								marriage: marriageurl,
								self: selfurl,
								address: addressurl,
								others: othersurl,
								uemail: uemail
							},
							success: (res) => {
								if (res.status != undefined) {                                    
                                    var wallet = db.collection("users").doc(uemail).collection("wallet").doc(uemail)
                                    var myamount = wallet.get().then((doc) => {
                                        var useramount = doc.data().amount
                                        wallet.update({
                                            amount: Number(useramount) - Number(60)
                                        }).then(() => {    
											const monthNames = ["January", "February", "March", "April", "May", "June",
                                                "July", "August", "September", "October", "November", "December"
                                            ];
                                            var date = new Date()
                                            var cdate = monthNames[date.getMonth()] + " " + date.getDate() + " " + date.getFullYear() + " " + date.getHours() + ":" + date.getMinutes()                                        
											db.collection("users").doc(uemail).collection("wallethistory").doc().set({
                                                amount: 60,
                                                Certificatename: "Inter Caste Certificate",
												date:cdate
                                            }).then(() => {
												db.collection("users").doc(uemail).get().then((docss) => {
                                                    db.collection("wallethistory").doc().set({
                                                        amount: 60,
                                                        Certificatename: "Inter Caste Certificate",
                                                        date: cdate,
                                                        name: docss.data().uname
                                                    })
                                                })
                                                toastr["success"]("Success", "Certificate Upload Successfully..");//successfully
                                                setTimeout(() => { window.location.reload() }, 2000)
                                            })
                                        })
                                    })
                                }
							}
						})
					}, 3000)


				} else {
					toastr["error"]("Low Balance", "Please Add Money..");
				}
			}
		})
	</script>
